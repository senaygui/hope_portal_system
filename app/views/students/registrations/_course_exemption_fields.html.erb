<div class="nested-fields card card-body mb-3">
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :course_taken, "Course Title" %>
        <%= f.text_field :course_taken, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :letter_grade %>
        <%= f.text_field :letter_grade, class: 'form-control' %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :credit_hour %>
        <%= f.number_field :credit_hour, class: 'form-control' %>
      </div>
    </div>
  </div>
  <%= link_to_remove_association "Remove Course", f, class: 'btn btn-danger btn-sm' %>
</div>
