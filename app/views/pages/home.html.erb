<% provide(:title, "Home") %>
<link href="https://fonts.googleapis.com/css?family=Raleway:400,600,700" rel="stylesheet">
<script src="https://unpkg.com/feather-icons"></script>

<style>
  body {
    background-image: linear-gradient(rgba(244, 247, 252, 0.1), rgba(244, 247, 252, 0.1)), url(<%= image_url('sign-in.jpg') %>);
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    font-family: 'Raleway', sans-serif;
  }

  .home-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4rem 0;
  }

  .welcome-container {
    max-width: 800px;
    width: 100%;
    padding: 20px;
  }

  .welcome-card {
    background: #ffffff;
    border-radius: 16px;
    box-shadow: 0 12px 35px rgba(0, 83, 156, 0.08);
    padding: 3rem;
    text-align: center;
    animation: fadeIn 1s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .logo {
    max-width: 460px;
    margin-bottom: 2rem;
  }

  .welcome-card h1 {
    font-weight: 700;
    font-size: 2.3rem;
    color: #036696;
    margin-bottom: 1rem;
  }

  .welcome-card p {
    font-size: 1.1rem;
    color: #5a6e82;
    line-height: 1.6;
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .continue-btn {
    background: linear-gradient(135deg, #077b3f, #036696);
    color: white;
    border: none;
    border-radius: 50px;
    padding: 14px 35px;
    font-size: 1.1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 5px 20px rgba(3, 102, 150, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: inline-flex;
    align-items: center;
    text-decoration: none;
  }

  .continue-btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(3, 102, 150, 0.3);
    color: white;
  }

  .continue-btn .feather {
    margin-left: 10px;
  }
</style>

<div class="home-wrapper">
  <div class="welcome-container">
  <div class="welcome-card">
    <%= image_tag("logo.jpg", class: "logo") %>
    <h1>Welcome To Hope University College</h1>
    <p>
      This is HEUC's registrar and school management portal system. To get started, please click the button below.
    </p>
    <%= link_to 'Continue <i data-feather="arrow-right"></i>'.html_safe, admission_path, class: "continue-btn" %>
  </div>
</div>
</div>

<script>
  document.addEventListener('turbolinks:load', function() {
    feather.replace();
  });
</script>
